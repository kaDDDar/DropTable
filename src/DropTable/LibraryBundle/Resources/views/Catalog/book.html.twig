{% extends '@DropTableLibrary/Default/layout.html.twig' %}

{% block content %}
    {#{{ dump(book) }}#}
    <div class="col-md-3">
        <div class="image">
                <img src="{{ book.thumbnail|default('http://placehold.it/200x200') }}" alt="{{ book.title }}"/>
        </div>
        <div class="category">
            [Kategorijos]{#{{ book.categories }}#}
        </div>
        <div class="publisher">
            [Leidykla]{#{{ book.publisher }}#}
        </div>
        <div class="created-at">
            Added: {{ book.createdAt.date|date('Y m d') }}
        </div>
    </div>
    <div class="col-md-6">
        <h1 class="title">
            {{ book.title }}
        </h1>
        <div class="authors">
            [Autoriai]
        </div>
        <div class="pages">
            {{ book.pages }}
            {% if (book.pages % 10) == 1 %}
                page
            {% else %}
                pages
            {% endif %}
        </div>
        <div class="description">
            {{ book.description }}
        </div>
        <div class="reserve-book">

        </div>
    </div>
    <div class="col-md-3">
        <div class="row">
            <div class="col-md-12">
                KnygÄ… turi:
                <div class="owners-list">
                    {{ render(controller(
                        'DropTableLibraryBundle:Catalog:owners',
                        { 'slug': book.id }
                    )) }}
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                Knygos laukia:
                <div class="waiting-list">
                    {{ render(controller(
                        'DropTableLibraryBundle:Reservation:reservations',
                        { 'slug': book.id }
                    )) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}